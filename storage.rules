rules_version = '2';

// Règles de sécurité pour le stockage Firebase (Storage)
service firebase.storage {
  // S'applique à tous les fichiers dans le "bucket" par défaut
  match /b/{bucket}/o {
    
    // Règle pour le dossier "images" (là où on met les photos)
    match /images/{allPaths=**} {
      
      // Tout le monde peut voir les images (pour que le site public marche)
      allow read: if true;
      
      // Seul un admin connecté peut ajouter/modifier/supprimer
      allow write: if request.auth != null;
    }
  }
}