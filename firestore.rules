
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fonction pour vérifier si l'utilisateur est authentifié via Firebase Auth
    function isAdmin() {
      return request.auth != null;
    }

    // 1. COLLECTIONS PUBLIQUES (Lecture pour tous, Écriture restreinte)
    match /members/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /clubs/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /ateliers/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /events/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /mentors/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 2. INSCRIPTIONS (Tout le monde peut s'inscrire, Admin peut gérer)
    match /club_registrations/{document=**} {
      allow create: if true;
      allow read: if true;
      allow delete: if isAdmin();
      allow update: if isAdmin();
    }

    match /cinema_sales/{document=**} {
      allow create: if true;
      allow read: if true;
      allow delete: if isAdmin();
      allow update: if isAdmin();
    }

    // 3. COLLECTIONS PRIVÉES (Admin Firebase uniquement)
    match /students/{document=**} {
      allow read, write: if isAdmin();
    }
    match /documents/{document=**} {
      allow read, write: if isAdmin();
    }

    // 4. SÉCURITÉ PAR DÉFAUT
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
