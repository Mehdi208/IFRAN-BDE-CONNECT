rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fonction pour vérifier si l'utilisateur est connecté (Admin)
    function isAdmin() {
      return request.auth != null;
    }

    // 1. COLLECTIONS PUBLIQUES (Lecture pour tous, Écriture pour Admin)
    match /members/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /clubs/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /events/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /mentors/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 2. INSCRIPTIONS AUX CLUBS
    match /club_registrations/{document=**} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if isAdmin();
    }

    // 3. INSCRIPTIONS AUX ÉVÉNEMENTS (C'est la règle qui vous manquait)
    match /event_registrations/{document=**} {
      allow create: if true; // Tout le monde peut s'inscrire
      allow read: if true;   // Tout le monde peut voir la liste
      allow update, delete: if isAdmin(); // Seul l'admin gère
    }

    // 4. COLLECTIONS PRIVÉES (Admin Uniquement)
    match /students/{document=**} {
      allow read, write: if isAdmin();
    }
    match /cinema_sales/{document=**} {
      allow read, write: if isAdmin();
    }
    match /documents/{document=**} {
      allow read, write: if isAdmin();
    }

    // 5. SÉCURITÉ PAR DÉFAUT
    match /{document=**} {
      allow read, write: if false;
    }
  }
}